/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

//    Use as follows:
//        nextflow run nf-core/cracflexalign -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus     = 2
    max_memory   = '6.GB'
    max_time     = '6.h'

    // Input data
    input        = "${projectDir}/assets/samplesheet.csv"

    // Genome references
    fasta        = "${projectDir}/test/Saccharomyces_cerevisiae.EF4.74.dna.toplevel.shortChrNames.fa"
    gtf          = "${projectDir}/test/Saccharomyces_cerevisiae.EF4.74_SGDv64_CUTandSUT_withUTRs_noEstimates_antisense_intergenic_4xlncRNAs_final.pyCheckGTFfile.output.gtf"

    // Alignment parameters
    seq_center   = "Wellcome Trust Center for Cell Biology"
    seq_platform = "ILLUMINA"
}   
